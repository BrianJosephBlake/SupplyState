<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SupplyState</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 h4"  style="background-color: #087DC4">
            <div class="container">
                <img src="/lib/CHI-blue.png" class="img-fluid" alt="Responsive image"/>
                <a class="navbar-brand h2" asp-area="" asp-page="/Dashboard" asp-route-HasAccess="@Model.HasAccess" asp-route-UserId="@Model.UserId">SupplyState</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @{ if (Model.HasAccess)
                    {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item ml-5 pl-5">
                                <a class="nav-link text-light" asp-area=""  asp-page="/MyItemsReadout" asp-route-HasAccess="@Model.HasAccess" asp-route-UserId="@Model.UserId">My Items</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-route-SiteName="St Francis" asp-page="/BackorderReadout" asp-route-HasAccess="@Model.HasAccess" asp-route-UserId="@Model.UserId">St Francis</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-route-SiteName="Good Samaritan" asp-page="/BackorderReadout" asp-route-HasAccess="@Model.HasAccess" asp-route-UserId="@Model.UserId">Good Samaritan</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-route-SiteName="St Elizabeth" asp-page="/BackorderReadout" asp-route-HasAccess="@Model.HasAccess" asp-route-UserId="@Model.UserId">St Elizabeth</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light align-self-end" asp-area="" asp-route-SiteName="Nebraska Heart" asp-page="/BackorderReadout" asp-route-HasAccess="@Model.HasAccess" asp-route-UserId="@Model.UserId">Nebraska Heart</a>
                            </li>

                        </ul>
                </div>
                        } }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
     
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CHI Health - <a asp-area="" asp-page="/About">About</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
