@page
@model RazorPagesUI.Pages.BackorderManagerModel
@{
}
 <div class="container">
     <div class=row align-items-center">
         <div class="col-md-5 align-self-center">
             <h1>@Model.SiteName</h1>
         </div>
         <div class="col-md-4"></div>
         <div class="col-md-3">
             <div class="list-group">
                 <a href="#" class="list-group-item list-group-item-action">
                     ALL
                     <span class="badge badge-primary badge-secondary">100</span>
                 </a>
                 <a href="#" class="list-group-item list-group-item-action">
                     OPEN
                     <span class="badge badge-primary badge-danger">75</span>
                 </a>
                 <a href="#" class="list-group-item list-group-item-action">
                     RESOLVED
                     <span class="badge badge-primary badge-secondary">25</span>
                 </a>
             </div>
         </div>
         
     </div>
</div>
 <hr class="my-4">
<form method="post">
    <div class="row">
        <div class="col-md-2">
            <p>LAWSON#</p>
        </div>
        <div class="col-md-4">
            <input type="text" asp-for="BackOrderDisplay.LawsonNumber" />
        </div>
        <div class="col-md-6">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">NOTES</th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    <p>DESCRIPTION</p>
                </div>
                <div class="col-md-8">
                    <input type="text" asp-for="BackOrderDisplay.Description" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>MFR#</p>
                </div>
                <div class="col-md-8">
                    <input type="text" asp-for="BackOrderDisplay.MfrNumber" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>STOCKOUT DATE</p>
                </div>
                <div class="col-md-8">
                    <input type="text" asp-for="BackOrderDisplay.StockoutDate" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>RELEASE DATE</p>
                </div>
                <div class="col-md-8">
                    <input type="text" asp-for="BackOrderDisplay.ReleaseDate" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>GAP DAYS</p>
                </div>
                <div class="col-md-8">
                    <input type="text" asp-for="BackOrderDisplay.GapDays" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>REASON CODE</p>
                </div>
                <div class="col-md-8">
                    <input type="text" asp-for="BackOrderDisplay.ReasonCode" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>STOCK STATUS</p>
                </div>
                <div class="col-md-8">
                    <input type="text" asp-for="BackOrderDisplay.StockStatus" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <p>SOURCE</p>
                </div>
                <div class="col-md-8">
                    <input type="text" asp-for="BackOrderDisplay.Source" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
          
        </div>
        <div class="col-md-1">
            <button type="submit">SAVE</button>
        </div>
        <div class="col-md-4"></div>
    </div>
    
</form>