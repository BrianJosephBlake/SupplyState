@page
@model RazorPagesUI.Pages.Critical_All_ItemsModel
@{
}




<div class="container pb-4">
    <div class="row align-items-center">
        <div class="col-md-5 align-self-center">
            <h4 class="pb-3">CRITICAL ITEMS</h4>
            <div class="row">
                <form method="post" asp-page-handler="Search" asp-route-SiteName="@Model.SiteName" asp-route-DisplayState="@Model.DisplayState" asp-route-DetailDisplayState="@Model.DetailDisplayState" asp-route-HasAccess="@Model.HasAccess" asp-route-UserId="@Model.UserId" asp-route-FromMyItems="@Model.FromMyItems" asp-route-MasterSiteUserId="@Model.MasterSiteUserId">
                    <div class="input-group mb-3">
                        <input type="text" asp-for="@Model.SearchKey" aria-label="Search" placeholder="Search item# or keyword" aria-describedby="button-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Search</button>
                        </div>
                    </div>
                </form>
            </div>

          
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-3">

           
        </div>
    </div>
</div>





<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">LAWSON#</th>
            <th scope="col">MFR#</th>
            <th scope="col">DESCRIPTION</th>

           

        </tr>
    </thead>
    <tbody>

        @{ foreach (var item in Model.ItemList)
            {
                string lawson = item.Item;
                string mfr = item.MfrNum;
                string desc = item.Description;
              
               


                <form method="post" asp-page-handler="SelectItem" asp-route-ItemId="@lawson" asp-route-DisplayState="@Model.DisplayState" asp-route-DetailDisplayState="@Model.DetailDisplayState" asp-route-SiteName="@Model.SiteName" asp-route-HasAccess="@Model.HasAccess" asp-route-UserId="@Model.UserId" asp-route-FromMyItems="@Model.FromMyItems" asp-route-SearchKey="@Model.SearchKey">
                    <tr>
                        <td>

                            <button type="submit" class="btn btn-default">
                                @lawson
                            </button>
                        </td>
                        <td>
                            <button type="submit" class="btn btn-default">
                                @mfr
                            </button>
                        </td>
                        <td>
                            <button type="submit" class="btn btn-default">
                                @desc
                            </button>
                        </td>
                     
                       
                    </tr>

                </form>
            }
        }

    </tbody>

</table>




