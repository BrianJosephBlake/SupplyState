@page
@model RazorPagesUI.Pages.SubsList_Model

@{
}




<div class="container pb-4">
    <div class="row align-items-center">
        <div class="col-md-5 align-self-center">
            <h4 class="pb-3">REMOVE SUBS</h4>
           

          
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-3">

           
        </div>
    </div>
</div>





<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ITEM#</th>
            <th scope="col">SUB LAWSON#</th>
            <th scope="col">SUB MFR#</th>
            <th scope="col">NOTES</th>
            <th scope="col">ACTIVE</th>
            <th scope="col"></th>


        </tr>
    </thead>
    <tbody>

        @{ foreach (var sub in Model.Subs)
            {
                int id = sub.Id;
                string item = sub.Item;
                string sub_lawson = sub.Sub_Lawson;
                string sub_mfr = sub.Sub_Mfr;
                string note = sub.Notes;
                string active = sub.Active;




                <form method="post" asp-page-handler="SelectSub" asp-route-SelectedSubId="@id" asp-route-DisplayState="@Model.DisplayState" asp-route-DetailDisplayState="@Model.DetailDisplayState" asp-route-SiteName="@Model.SiteName" asp-route-HasAccess="@Model.HasAccess" asp-route-UserId="@Model.UserId" asp-route-FromMyItems="@Model.FromMyItems" asp-route-SearchKey="@Model.SearchKey" asp-route-ItemId="@Model.ItemId">
                <tr>
                    <td>

                        <a type="submit" class="btn btn-default">
                            @item
                        </a>
                    </td>
                    <td>
                        <a type="submit" class="btn btn-default">
                            @sub_lawson
                        </a>
                    </td>
                    <td>
                        <a type="submit" class="btn btn-default">
                            @sub_mfr
                        </a>
                    </td>
                    <td>
                        <a type="submit" class="btn btn-default">
                            @note
                        </a>
                    </td>
                    <td>
                        <a type="submit" class="btn btn-default">
                            @active
                        </a>
                    </td>
                    <td>
                        <button type="submit" class="btn btn-outline-danger">
                            REMOVE
                        </button>
                    </td>

                </tr>

                </form>
            }
        }

    </tbody>

</table>




